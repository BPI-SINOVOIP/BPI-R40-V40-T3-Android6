<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    >

    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" 
        android:id="@+id/surface1"
        android:layout_weight="1"
        >
        <TextureView 
        android:id="@+id/video0"
        android:background="#FF000000"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
        />
        <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        >
		
    <TextView 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:id="@+id/recording_time"
        	android:background="@drawable/bg_text_on_preview"
        	android:singleLine="true"
        	android:textColor="@android:color/white"
        	android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="3dp"
            android:paddingRight="15dp"
            android:paddingBottom="3dp"      
            android:drawableLeft="@drawable/ic_recording_indicator"
            android:drawablePadding="5dp"
            android:text="@string/time"
            android:visibility="gone"
             />
	</LinearLayout>
	
         <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            layout="@layout/ctrl_menu_bar" />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" 
        android:id="@+id/surface2"
        android:layout_weight="1"
        >
        <TextureView 
        android:id="@+id/video1"
        android:background="#FF00FF00"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
        />
        <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        >
    <TextView android:id="@+id/recording_time1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="@drawable/bg_text_on_preview"
        	android:singleLine="true"
        	android:textColor="@android:color/white"
        	android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="3dp"
            android:paddingRight="15dp"
            android:paddingBottom="3dp"      
            android:drawableLeft="@drawable/ic_recording_indicator"
            android:drawablePadding="5dp"
            android:text="@string/time"
            android:visibility="gone"
             />
	</LinearLayout>
         <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            layout="@layout/ctrl_menu_bar2" />
    </RelativeLayout>
    
  
</LinearLayout>
   

</RelativeLayout>